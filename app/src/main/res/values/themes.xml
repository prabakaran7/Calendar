        <item name="bgSeparator">@color/teal_700</item>
        <item name="bgSideText">@color/purple_300</item>
        <item name="tcSideText">@color/white</item>
        <item name="tcTab">@color/grey_100</item>

        <item name="bgHoliday">@color/red_1</item>
        <item name="tcHoliday">@color/white</item>
        <item name="bgToday">@color/green1</item>
        <item name="tcToday">@color/white</item>
        <item name="txt_color">@color/teal_900</item>
    </style>


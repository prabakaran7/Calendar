<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Calendar.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarItemBackground">@color/purple_500</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="bgMain">@color/white</item>
        <item name="bgTitleCardStart">@color/purple_200</item>
        <item name="bgTitleCardCenter">@color/purple_500</item>
        <item name="bgTitleCardEnd">@color/purple_200</item>
        <item name="bgSubTitle">@color/purple_200</item>
        <item name="tcSubTitle">@color/white</item>
        <item name="tcTitle">@color/white</item>
        <item name="bgSeparator">@color/teal_700</item>
        <item name="bgSideText">@color/teal_200</item>
        <item name="tcSideText">@color/white</item>
    </style>

</resources>
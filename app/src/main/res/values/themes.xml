<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="Theme.calendar.SplashScreen" parent="Theme.Calendar.Default">
        <item name="android:windowBackground">@color/purple_700</item>
    </style>


    <style name="Theme.Calendar.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarItemBackground">@color/purple_500</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="bgMain">@color/white</item>
        <item name="bgTitleCardStart">@color/purple_200</item>
        <item name="bgTitleCardCenter">@color/purple_500</item>
        <item name="bgTitleCardEnd">@color/purple_200</item>
        <item name="bgSubTitle">@color/purple_200</item>
        <item name="tcSubTitle">@color/white</item>
        <item name="tcTitle">@color/white</item>
        <item name="bgSeparator">@color/teal_700</item>
        <item name="bgSideText">@color/teal_200</item>
        <item name="tcSideText">@color/white</item>
        <item name="month_header_bg">@color/white</item>
        <item name="headerTxt">@color/purple_500</item>
    </style>

    <style name="Theme.Calendar.Red" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_blue_50</item>
        <item name="actionBarItemBackground">@color/purple_500</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="bgMain">@color/purple_200</item>
        <item name="bgTitleCardStart">@color/red_1</item>
        <item name="bgTitleCardCenter">@color/red_2</item>
        <item name="bgTitleCardEnd">@color/red_1</item>
        <item name="bgSubTitle">@color/red_2</item>
        <item name="tcSubTitle">@color/white</item>
        <item name="tcTitle">@color/white</item>
        <item name="bgSeparator">@color/red_2</item>
        <item name="bgSideText">@color/red_3</item>
        <item name="tcSideText">@color/white</item>
        <item name="month_header_bg">@color/purple_200</item>
        <item name="headerTxt">@color/white</item>
    </style>

    <style name="Theme.Calendar.Default.AppWidget" parent="@style/Theme.Material3.DynamicColors.DayNight">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
        <item name="android:background">@drawable/background_widget</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bgSubTitle"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/nallaNeramLabel"
                android:textColor="?attr/tcSubTitle"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?attr/tcSubTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:text="@string/gowriNallaNeramLabel"
                android:textColor="?attr/tcSubTitle"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="?attr/bgSideText"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/morningLabel"
                android:textColor="?attr/tcSideText"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nallaNeramMorning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="9:00 - 10:00" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?attr/bgSideText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gowriMorning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="9:00 - 10:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="?attr/tcSideText" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="6"
                android:background="?attr/bgSideText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="?attr/bgSideText"
                android:gravity="center_horizontal"
                android:paddingVertical="5dp"
                android:text="@string/eveningLabel"
                android:textColor="?attr/tcSideText"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nallaNeramEvening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="9:00 - 10:00" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?attr/bgSideText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gowriEvening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="9:00 - 10:00" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>